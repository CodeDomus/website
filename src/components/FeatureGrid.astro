---
import FeatureCard from "./FeatureCard.astro";
const features = [
  { icon: "📜", title: "Receptarium", description: "Hojas rápidas de sintaxis y patrones." },
  { icon: "🏛️", title: "Fundamenta", description: "Boilerplates modernos para arrancar." },
  // { icon: "🗡️", title: "Arena", description: "Retos semanales con leaderboard." },
];
---

<section id="features" class="container mx-auto px-4 py-20">
  <div class="grid-cols-auto-fit grid gap-8">
    {features.map((f) => <FeatureCard {...f} />)}
  </div>
</section>

<style>
  .grid-cols-auto-fit {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }
</style>
